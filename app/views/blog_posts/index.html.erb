<p id="notice"><%= notice %></p>

<h1>Blog Posts</h1>

Welcome <%= current_user.username %> !


<div> 
  <% @blog_posts.each do |blog_post| %>
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3><%= link_to blog_post.title, blog_post %></h3>
    </div>
    <div class="panel-body">
      <p>by <%= blog_post.user.username %></p>
              <p><span class="posted-at">posted at: <%= blog_post.created_at.strftime('%m/%d/%Y at %I:%M%p') %></span></p>
             <p><%= blog_post.blog_entry[0..250] %>...[<%= link_to "READ MORE", blog_post %>] %></p>
    </div>
    <div class="panel-footer">
        <td><%= link_to 'Edit', edit_blog_post_path(blog_post) , class: "btn btn-default" %>
        <td><%= link_to 'Delete', blog_post, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-default" %>

    </div>
  </div>
</div>
<% end %>

<br>

<%= link_to 'New Blog post', new_blog_post_path, class: "btn btn-primary" %>
